<Window x:Class="TestCase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestCase"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Тестовое задание" Height="300" Width="300" ResizeMode="NoResize">
    <Grid x:Name="MainWindowGrid">
        <Button x:Name="StartButton" Width="100" Height="30" Content="Запуск" Click="StartButton_Click"  Canvas.Left="100" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,85,0,0" />
        <Button x:Name="ExitButton" Width="100" Height="30" Content="Выход" Click="ExitButton_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,85"  />
    </Grid>
</Window>
